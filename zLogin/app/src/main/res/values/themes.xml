<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZLogin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/login</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">monospace</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>
    
    <style name="intro" parent="TextAppearance.AppCompat">
        <item name="color">@color/lightDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/access</item>
        <item name="fontFamily">monospace</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="orUseEmail" parent="TextAppearance.AppCompat">
        <item name="color">@color/lightDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/OrEmail</item>
        <item name="fontFamily">monospace</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="socialButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="Register" parent="TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textSize">14dp</item>
        <item name="android:text">dont have account <b>?<u>Sign Up</u></b></item>
        </style>
    
    <style name="buttonText" parent="Theme.MaterialComponents">
        <item name="android:text">@string/signUp</item>
        <item name="android:capitalize">words</item>
        <item name="android:textColor">@color/lightDark</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>